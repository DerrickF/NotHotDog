<div class="jumbotron" style="background-color: #C00000; opacity: 0.75; border: black; text-align: center; color: white;">
    <h1 style="">Not A Hot Dog</h1>
    <span style="" class="fa-stack fa-4x">
        <i style="color: #C00000" class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-times fa-stack-1x"></i>
    </span>
</div>

<div class="center-form">
    <h1>@ViewBag.isHotdog</h1>
    <h1>@ViewBag.backgroundImagePath</h1>
    @Html.ActionLink("Start Again", "Index", "Home", null, new {@class="btn btn-lg btn-info"})
</div>


@section Scripts
{
    <script>
        $(document).ready(function () {
            $('body').removeClass("full");
            $('body').addClass("fullHotdog");
        });
    </script>
}
