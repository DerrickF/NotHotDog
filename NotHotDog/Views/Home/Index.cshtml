<div class="jumbotron" style="background-color: #34495e; opacity: 0.75; text-align: center; color: white">
    <h1 style="">SeeFood</h1>
</div>

<div class="center-form">
    <form class="form" method="post" asp-action="Index" asp-controller="Home" enctype="multipart/form-data">
        <p>
            <label class="btn btn-lg btn-default btn-file">
                Select Image <input id="fileUpload" type="file" name="file" style="display: none; " required />
            </label>
        </p>
        <p>
            <button type="submit" class="btn btn-lg btn-danger">Analyze</button>
        </p>
    </form>

    <script type="text/javascript">
        document.getElementById("fileUpload").onchange = function () {
            var reader = new FileReader();
            reader.onload = function (e) {
                // get loaded data and background.
                var background = document.getElementsByTagName("body")[0];
                background.style.backgroundImage = "url(" + e.target.result + ")";
            };
            // read the image file as a data URL.
            reader.readAsDataURL(this.files[0]);
        };
    </script>
</div>







